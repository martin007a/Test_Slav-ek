<Window x:Class="Test_Slavíček.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Slavíček"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="72*"/>
        </Grid.RowDefinitions>
        <Button Name="btn_Jet_1" Content="Jet" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="100"  Grid.Column="1" Margin="90,22,0,0" Click="btn_Jet_1_Click"/>
        <Button Name="btn_Naložit_1" Grid.Column="1" Content="Naložit" Height="40" Grid.Row="1" VerticalAlignment="Top"  Margin="90,12,10,0" Click="btn_Naložit_1_Click"/>
        <Button Name="btn_Tankovat_1" Grid.Column="1" Content="Natankovat" HorizontalAlignment="Left" Height="40" Grid.Row="2" VerticalAlignment="Center" Width="100"  Margin="90,0,0,0" Click="btn_Tankovat_1_Click"/>
        <TextBox Name="txtbox1" Grid.ColumnSpan="2" Margin="45,16,180,13" Grid.RowSpan="3" TextWrapping="Wrap" Text="TextBox"/>
        <Button Name="btn_Vysipat_1" Grid.Column="1" Content="Vysipat" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Height="40" Width="100" Margin="90,0,0,0" Click="btn_Vysipat_1_Click"/>
        <TextBox Name="txtbox2" Grid.Column="2" HorizontalAlignment="Left" Margin="62,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="200" Width="175" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Button Name="btnJet_2" Grid.Column="3" Content="Jet" Grid.Row="0" HorizontalAlignment="Left" Height="40" Margin="71,0,0,0" VerticalAlignment="Center" Width="100" Click="btnJet_2_Click"/>
        <Button Name="btn_Natankovat_2" Grid.Column="3" Content="Natankovat" Grid.Row="1" HorizontalAlignment="Left" Height="40" Margin="71,0,0,0" VerticalAlignment="Center" Width="100" Click="btn_Natankovat_2_Click"/>
        <Button Name="btn_Nalozit_2" Grid.Column="3" Content="Naložit" Grid.Row="2" HorizontalAlignment="Left" Height="40" Margin="71,0,0,0" VerticalAlignment="Center" Width="100" Click="btn_Nalozit_2_Click"/>
        <Button Name="btn_Vysipat_2" Grid.Column="3" Content="Vysypat" Grid.Row="3" HorizontalAlignment="Left" Height="40" Margin="71,0,0,0" VerticalAlignment="Center" Width="100" Click="btn_Vysipat_2_Click"/>
        
    </Grid>
</Window>
